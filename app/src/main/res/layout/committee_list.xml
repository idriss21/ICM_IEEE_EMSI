<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


 <!--<include android:id="@+id/app_bar_kenotes_info" layout="@layout/app_bar" />-->



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv_committee"
        android:layout_marginBottom="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Committee"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="25dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/titleItem"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/descItem"
                android:layout_below="@+id/titleItem"
                android:text="my description"
                />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_committee"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16sp">
    </android.support.v7.widget.RecyclerView>

</LinearLayout>